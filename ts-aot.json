{
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "module": "es2015",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": "",
        "noEmitHelpers": false,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "include": [
        "./src/**/*.module.ts",
        "./src/*.d.ts",
        "./src/*.ts",
        "./src/**/*.ts"
    ],
    "exclude": [
        ".src/app/app.module.hmr.ts",
        "node_modules",
        "*.d.ts",
        "**/*-aot.ts",
        "dist",
        "aot"
    ],
    // "angularCompilerOptions": {
    //     "debug": false,
    //     "genDir": "ngc",
    //     "skipMetadataEmit": false
    // },
    "compileOnSave": false,
    "buildOnSave": false
}